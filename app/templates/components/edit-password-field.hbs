<div class="form-group {{if invalid 'has-error'}}" id="password-edit-field">
  <label for="password1">Password</label>
  <div class="row">
    <div class="col-xs-6">
      <button type="button" name="button" class="btn btn-default btn-sm"
              {{action "generatePassword"}}>
        Generate password
      </button>
    </div>
    <div class="col-xs-6 text-right">
      <button type="button" name="button" class="btn btn-default btn-sm"
              {{action "showOptions"}} disabled={{showGeneratorOptions}}>
        Generator options
      </button>
    </div>
  </div>
  {{#if showGeneratorOptions}}
    <div class="row">
      TODO
    </div>
  {{/if}}
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      {{input type="password" name="password1" class="form-control"
              value=password1}}
    </div>
    <div class="col-xs-12 col-sm-6">
      {{input type="password" name="password2" class="form-control"
              value=password2 placeholder="Repeat password"}}
    </div>
  </div>
  <div id="password-strength-meter"></div>
</div>
